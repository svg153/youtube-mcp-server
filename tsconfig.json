{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "noImplicitAny": false
  },
  "include": [
    "src/services/**/*",
    "src/index.ts",
    "src/server.ts",
    "src/cli.ts",
    "src/types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}